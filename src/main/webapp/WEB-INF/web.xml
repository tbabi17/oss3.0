	<filter>
		<filter-name>CordovaOriginWrapper</filter-name>
		<filter-class>mn.mxc.oss.HttpHeaderNullFierFilter</filter-class>
		<init-param>
			<param-name>headers</param-name>
			<param-value>Origin=file//</param-value>
